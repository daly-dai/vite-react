{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
        "@/*": [
          "src/*"
        ],
        "@packages/*": [
          "src/packages/*"
        ],
        "@pages/*": [
          "src/pages/*"
        ],
        "@common/*": [
          "src/common/*"
        ],
        "@hook/*": [
          "src/hook/*"
        ],
        "@store/*": [
          "src/store/*"
        ],
        "@utils/*": [
          "src/utils/*"
        ],
        "@config/*": [
          "src/config/*"
        ],
        "@router/*": [
          "src/router/*"
        ],
        "@service/*": [
          "src/service/*"
        ],
        "@types/*": [
          "src/types/*"
        ],
        "@components/*": [
          "src/packages/components/*"
        ]
    },
  },
  "include": ["src/*", "src/**/*.ts","src/**/*.js","src/**/*.jsx", "src/**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules", "dist"]
}
